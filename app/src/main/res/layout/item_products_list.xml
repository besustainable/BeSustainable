<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/item">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImgProduct"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_rafael_nadal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="Name"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPvpIcon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@mipmap/pvpicon" />

                <ImageView
                    android:id="@+id/ivWeight"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@mipmap/weighticon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPvp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="12,30 â‚¬"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="0,75 kg"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSatisfactionAVG"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/satisfaction_3" />

        <ImageView
            android:id="@+id/ivEconomyAVG"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/economy_5" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/rating"
            android:gravity="center"
            android:text="7,8"
            android:textColor="@android:color/background_dark"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>